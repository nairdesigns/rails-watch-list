<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>


<main>
    <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
                     <% @lists.each do |list| %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="co-12 col-sm-6 col-md-4 align-self-center">
                          <%= link_to list_path(list), class: "text-decoration-none" do %>
                              <%= list.name %>
                              <%# <%= cl_image_path(list.photo.key) %>
                              <% if list.photo.attached? %>
                              <%= cl_image_tag(list.photo.key, class: "user-img",  crop: :scale) %>
                                <% end %>
                            </div>
                          <% end %>
                    </div>
                </div>
            </div>
          <% end %>
